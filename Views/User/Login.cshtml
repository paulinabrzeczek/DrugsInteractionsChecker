@model InterakcjeMiedzyLekami.Models.User
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        
        header{
            margin-bottom:10%;
        }

        form {
            background-color: #fff;
            position:relative;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            height:100%;
            width: 90%;
            max-width: 500px;
            transition: transform 0.3s ease;
            margin: auto;
        }

            form:hover {
                transform: scale(1.02);
                padding: 18px;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            }

        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }

        .btn-primary {
            width: 100%;
            padding: 12px;
            background-color: #8fb5c9;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #7b9dbd;
            }

        a {
            display: block;
            margin-top: 10px;
            text-align: center;
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <form method="post">
            <div class="form-group">
                <label for="Username">Username:</label>
                <input type="text" name="Username" id="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input name="Passwordhash" type="password" id="Password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Zaloguj</button>
            <br>
            <a asp-controller="user" asp-action="register">Utwórz nowe konto</a>
        </form>
    </div>
    <script src="~/js/login.js"></script>
</body>
</html>
